{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  {% if error %}
      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
{% endblock fos_user_content %}

{% block body %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />


<div class="container">
  <h2>Sign in</h2></br></br></br></br>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      
      <div class="col-md-offset-4 col-md-4">
        <input type="username" class="form-control" name="_username" id="username" placeholder="Enter login" required="required">
    </br>
      </div>
    </div>
    <div class="form-group">
      
      <div class="col-md-offset-4 col-md-4">          
        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Enter password">
      </div>
    </div>
    <div class="form-group">        
      <div class="col-md-offset-4 col-md-4">
        <div class="checkbox">
          <label><input type="checkbox" id="remember_me" name="_remember_me" value="on"> Remember me</label>
        </div>
      </div>
    </div>
    <div class="form-group">        
      <div class="col-md-offset-4 col-md-4">
        <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-block">Sign in</button></br>
      </div>
    </div>
    <div class="form-group">        
      <div class="col-md-offset-4 col-md-4">
        <a href="www/anonymous-gift/web/app_dev.php/register" class="btn btn-default btn-block">Create an account</a>
      </div>
    </div>
  </form>
</div>

</form>

{% endblock %}
